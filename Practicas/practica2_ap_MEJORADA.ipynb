    "# Estudio sistemático: Batch Size\n",
    "batch_sizes = [32, 64, 128, 256, 512]\n",
    "resultados_batch = []\n",
    "\n",
    "print(\"\\n=== ESTUDIO: BATCH SIZE ===\")\n",
